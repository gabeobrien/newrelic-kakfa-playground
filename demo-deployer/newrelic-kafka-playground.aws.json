{
    "resources": [
      {
        "id": "zk1",
        "display_name": "Zookeeper1",
        "provider": "aws",
        "type": "ec2",
        "size": "t3.small",
        "ami_name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "user_name": "ubuntu",
        "tags": {
          "role": "zookeeper",
          "zookeeper_my_id": "0"
        }
      },
      {
        "id": "kf1",
        "display_name": "Kafka1",
        "provider": "aws",
        "type": "ec2",
        "size": "t3a.small",
        "ami_name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "user_name": "ubuntu",
        "tags": {
          "role": "kafka_broker",
          "kafka_broker_id": "0"
        }
      },
      {
        "id": "kf2",
        "display_name": "kafka2",
        "provider": "aws",
        "type": "ec2",
        "size": "t3a.small",
        "ami_name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "user_name": "ubuntu",
        "tags": {
          "role": "kafka_broker",
          "kafka_broker_id": "1"
        }
      }
    ],
    
    "instrumentations": {
      "resources": [
        {
          "id": "nr_infra",
          "resource_ids": ["zk1"],
          "provider": "newrelic",
          "local_source_path": "/usr/local/app/demo-deployer",
          "deploy_script_path": "deploy/newrelic-infra/zookeeper-node/roles",
          "version": "1.13.2",
          "params": {
            "new_relic_license_key": "[credential:newrelic:license_key]"
          }
        }
      ]
    },
    
    "global_tags": {
      "project": "demtoron-v3-kafka-playground",
      "usecase": "kafka"
    }
}